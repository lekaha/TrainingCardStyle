<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white"
    android:orientation="vertical"
    android:padding="16dp" >
 
    <com.avermedia.training.cardstyle.card.CardHeadView 
        style="@style/card.header_outer_layout"
        android:id="@+id/card_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
	        android:id="@+id/activity_googlecards_card_imageview"
	        android:layout_width="@dimen/card_content_icon_size"
	        android:layout_height="@dimen/card_content_icon_size"
	        android:scaleType="centerCrop"
	        android:contentDescription="@string/imageview_contentDescription"
	        />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <TextView
    	    	style="@style/card.content_title_layout"
	        android:id="@+id/activity_googlecards_card_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
            <TextView
    	    	style="@style/card.content_subtitle_layout"
	        android:id="@+id/activity_googlecards_card_subtitle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
            
        </LinearLayout>
    	
    	
        
    </LinearLayout>

</LinearLayout>